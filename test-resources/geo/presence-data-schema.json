{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Ably Asset Tracking Presence Data",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The type of client in the presence channel.",
      "enum": ["SUBSCRIBER", "PUBLISHER"]
    },

    "resolution": {
      "type": ["object", "null"],
      "description": "The resolution requested by the subscriber.",
      "$ref": "https://schemas.ably.com/json/asset-tracking-common/Resolution"
    },

    "rawLocations": {
      "type": ["boolean", "null"],
      "description": "Informs if publisher is also publishing raw locations."
    }
  },
  "additionalProperties": false,
  "required": ["type", "resolution"]
}
